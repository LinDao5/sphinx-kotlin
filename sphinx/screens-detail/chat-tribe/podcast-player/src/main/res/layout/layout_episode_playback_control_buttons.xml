<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/layout_constraint_episode_playback_control_buttons"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingVertical="@dimen/default_layout_margin">


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_playback_speed_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_share_clip_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_replay_15_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />


    <!--  Play Button (show if paused)  -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_play_button"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginHorizontal="@dimen/default_layout_margin"
        android:fontFamily="@font/material_icons_regular"
        android:gravity="center"
        android:text="@string/material_icon_name_play_button"
        android:textColor="@color/receivedIcon"
        android:textSize="32sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_view_replay_15_button"
        app:layout_constraintTop_toBottomOf="@id/text_view_playback_speed_button"
        tools:visibility="visible" />

    <!--  Pause Button (show if playing)  -->
    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_pause_button"
        android:layout_width="58dp"
        android:layout_height="58dp"
        android:layout_marginHorizontal="@dimen/default_layout_margin"
        android:fontFamily="@font/material_icons_regular"
        android:gravity="center"
        android:text="@string/material_icon_name_pause_button"
        android:textColor="@color/receivedIcon"
        android:textSize="32sp"
        android:visibility="gone"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@id/text_view_replay_15_button"
        app:layout_constraintTop_toBottomOf="@id/text_view_playback_speed_button"
        tools:visibility="visible" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/text_view_boost_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView" />

</androidx.constraintlayout.widget.ConstraintLayout>
