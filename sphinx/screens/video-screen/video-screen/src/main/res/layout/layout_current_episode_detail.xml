<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    tools:background="@color/headerBG"
    >

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_video_player"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        app:layout_constraintTop_toTopOf="parent"
        >

        <WebView
            android:id="@+id/web_view_youtube_video_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintTop_toTopOf="parent"
            />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/constraint_layout_remove_video_player"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <VideoView
                android:id="@+id/video_view_video_player"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                app:layout_constraintTop_toTopOf="parent"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layout_constraint_bottom_controls"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/selectedMessageBackground"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toBottomOf="parent">

                <androidx.constraintlayout.widget.ConstraintLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/default_layout_margin"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintBottom_toBottomOf="parent">

                    <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/text_view_play_pause_button"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/material_icon_name_play_button"
                        android:textColor="@android:color/white"
                        android:textSize="30sp"
                        android:fontFamily="@font/material_icons_regular"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintBottom_toBottomOf="parent" />

                    <androidx.appcompat.widget.AppCompatSeekBar
                        android:id="@+id/seek_bar_current_progress"
                        style="?android:attr/seekBarStyle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:secondaryProgressTint="@color/receivedIcon"
                        android:thumbTint="@color/receivedIcon"
                        android:progressDrawable="@drawable/podcast_player_seek_bar_progress"
                        android:thumb="@drawable/podcast_player_seek_bar_thumb"
                        android:progress="0"
                        app:layout_constraintTop_toTopOf="@+id/text_view_play_pause_button"
                        app:layout_constraintBottom_toBottomOf="@+id/text_view_play_pause_button"
                        app:layout_constraintEnd_toStartOf="@+id/text_view_current_time"
                        app:layout_constraintStart_toEndOf="@+id/text_view_play_pause_button" />

                    <TextView
                        android:id="@+id/text_view_current_time"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="@+id/text_view_play_pause_button"
                        app:layout_constraintBottom_toBottomOf="@+id/text_view_play_pause_button"
                        tools:text="00:00"/>

                </androidx.constraintlayout.widget.ConstraintLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>


        </androidx.constraintlayout.widget.ConstraintLayout>


    </androidx.constraintlayout.widget.ConstraintLayout>

    <TextView
        android:id="@+id/text_view_current_video_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_half_layout_margin"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/text"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/constraint_layout_video_player"
        tools:text="Who Will Road the Builds?"
        />

    <TextView
        android:id="@+id/text_view_current_video_view_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_half_layout_margin"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/secondaryText"
        android:maxLines="2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/text_view_current_video_title"
        tools:text="23 000 views"
        />

    <TextView
        android:id="@+id/text_view_current_video_published_date"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/default_half_layout_margin"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/secondaryText"
        android:maxLines="2"
        app:layout_constraintStart_toEndOf="@+id/text_view_current_video_view_count"
        app:layout_constraintTop_toBottomOf="@+id/text_view_current_video_title"
        tools:text="22 Sep"
        />

    <TextView
        android:id="@+id/text_view_current_video_description"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/default_half_layout_margin"
        android:layout_marginTop="@dimen/default_layout_margin"
        android:fontFamily="@font/roboto_regular"
        android:textColor="@color/secondaryText"
        android:maxLines="3"
        app:layout_constraintBottom_toTopOf="@+id/view_detail_divider"
        app:layout_constraintTop_toBottomOf="@+id/text_view_current_video_published_date"
        tools:text="This video about setting up layouts on the Android view and all the jazz."
        />
    <!-- TODO: Add a read more -->

    <View
        android:id="@+id/view_detail_divider"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="@dimen/default_half_layout_margin"
        android:background="@color/secondaryText"
        app:layout_constraintTop_toBottomOf="@+id/text_view_current_video_description"
        />

    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/constraint_layout_subscription_bar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toBottomOf="@+id/view_detail_divider"
        >
        <androidx.cardview.widget.CardView
            android:id="@+id/card_view_contributor_image_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_layout_margin"
            app:cardCornerRadius="@dimen/default_feed_image_xy"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            >

            <androidx.appcompat.widget.AppCompatImageView
                android:id="@+id/image_view_contributor_image"
                android:layout_width="@dimen/default_feed_watch_channel_image_xy"
                android:layout_height="@dimen/default_feed_watch_channel_image_xy"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/ic_tribe" />

        </androidx.cardview.widget.CardView>
        <TextView
            android:id="@+id/text_view_contributor_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/default_half_layout_margin"
            android:fontFamily="@font/roboto_regular"
            android:textColor="@color/secondaryText"
            android:maxLines="3"
            app:layout_constraintStart_toEndOf="@+id/card_view_contributor_image_wrapper"
            app:layout_constraintEnd_toStartOf="@+id/button_subscribe"
            app:layout_constraintTop_toTopOf="@+id/card_view_contributor_image_wrapper"
            app:layout_constraintBottom_toBottomOf="@+id/card_view_contributor_image_wrapper"
            tools:text="BTC Sesssions"
            />
        <com.google.android.material.button.MaterialButton
            android:id="@+id/button_subscribe"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/subscribe"
            app:cornerRadius="@dimen/default_radius"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>
